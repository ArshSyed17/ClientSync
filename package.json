{
  "name": "clientsync",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A sleek CRM web app for freelancers to manage clients, projects and invoices. Built with React, Tailwind and JSON-Server.",
  "scripts": {
    "dev": "concurrently -n \"JSON-SERVER,VITE\" -c \"blue,green\" \"npm run server\" \"vite\"",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "json-server --watch db.json --port 5000",
    "start": "concurrently -n \"JSON-SERVER,VITE\" -c \"blue,green\" \"npm run server\" \"vite\"",
    "typecheck": "tsc --noEmit -p tsconfig.app.json"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "concurrently": "^9.2.1",
    "json-server": "^1.0.0-beta.3",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.6",
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
